<div class="row justify-content-md-center">
	<div class="col-8 pb-4">
		<div class="card text-center shadow mb-5 bg-white rounded">
			<div class="card-header fst-italic">
				<%= link_to user.username, user_path(user), class: "text-underline-hover" %>
			</div>
			<div class="card-body">
				<%= gravatar_for user, size: 150 %>
				<p class="mb-3 mt-3"><%= pluralize(user.articles.length, "article") %></p>
				<%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
				<% if logged_in? && user == current_user %>
					<%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info" %>
				<% end %>
				<% if logged_in? && current_user.admin? %>
					<%= link_to "Delete Account", user_path(user), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure you want to delete this account and all associated articles?" } %>
				<% end %>
			</div>
			<div class="card-footer text-muted">
				<small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
			</div>
		</div>
	</div>
</div>